  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },

    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Month",
          "outputTemplate": "{Timestamp:G} [{Level:u3}] {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "MSSqlServer", // If I want logs to be kept on the SQL side, the necessary configuration
        "Args": {
          "connectionString": "Server=BATUHAN\\SQLEXPRESS;Initial Catalog=Nowadays;MultipleActiveResultSets=True;Integrated Security=True;Encrypt=True;TrustServerCertificate=True;",
          "sinkOptions": {
            "AutoCreateSqlTable": true,
            "TableName": "Logs"
          },
          //"appConfiguration": null,
          "columnOptions": { // If I want to add an additional parameter to my SQL Logs table, I must specify it here.
            "AdditionalColumns": [
              {
                "ColumnName": "UserName",
                "DataType": "NVARCHAR",
                "DataLength": 50,
                "AllowNull": true
              },
              {
                "ColumnName": "RequestPath",
                "DataType": "NVARCHAR",
                "DataLength": 150,
                "AllowNull": true
              }
            ]
          }
        }
      }
